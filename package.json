{
  "name": "turborepo-basic-shared",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "updateDeps": "bash -c 'npx npm-check-updates -u; for f in packages/*; do pushd \"$f\" && npx npm-check-updates -u && popd; done; for f in apps/*; do pushd \"$f\" && npx npm-check-updates -u && popd; done'"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.7",
    "postcss": "^8.4.14",
    "prettier": "^2.7.1",
    "prettier-plugin-tailwindcss": "^0.2.3",
    "tailwindcss": "^3.1.5",
    "turbo": "latest"
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=14.0.0"
  },
  "packageManager": "pnpm@6.11.0",
  "pnpm": {
    "overrides": {
      "glob-parent@<5.1.2": ">=5.1.2",
      "minimist@<1.2.6": ">=1.2.6",
      "nth-check@<2.0.1": ">=2.0.1",
      "color-string@<1.5.5": ">=1.5.5",
      "ajv@<6.12.3": ">=6.12.3",
      "yargs-parser@>=6.0.0 <13.1.2": ">=13.1.2",
      "mem@<4.0.0": ">=4.0.0",
      "postcss@<7.0.36": ">=7.0.36",
      "async@<2.6.4": ">=2.6.4",
      "moment@<2.29.2": ">=2.29.2"
    }
  }
}